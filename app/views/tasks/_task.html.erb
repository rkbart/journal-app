<div id="<%= dom_id task %>" class="task-container"> <!-- used in show.html.erb -->
 
  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= task.category.name %>
  </p>

</div>
