<div class = "tasks-index">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Tasks" %> 

  <h1>Tasks</h1> <%= link_to "New task", new_task_path %>
  <span class="material-icons" style="color: blue; font-size: 32px;">add_task</span>


  
  <div id="tasks">
    <% @tasks.each do |task| %>
    
      <div id="<%= dom_id task %>" class="task-container"> <!-- used in show.html.erb -->
        <p>
          <strong>Description:</strong>
          <%= task.description %>
        </p>

        <p>
          <strong>Due date:</strong>
          <%= task.due_date %>
        </p>

        <p>
          <strong>Completed:</strong>
          <%= task.completed %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= task.category.name %>
        </p>
      </div>
        
      <!-- <p>
        <%= link_to "Show this task", task %>
      </p> -->

    <% end %>
    
  </div>
  
</div>
